

string fairRations(vector<int> B) {
    int n = B.size();
    int ans=0;
    for (int i=0; i<n-1 ; i++) {
        if (B[i]%2!=0) {
            B[i]++;
            B[i+1]++;
            ans+=2;
        }
    }
        if (B[n-1]%2!=0) {
            return "NO";
        }
    return to_string(ans);
}
